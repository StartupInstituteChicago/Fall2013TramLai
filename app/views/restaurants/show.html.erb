<%= image_tag @restaurant.image_url(:masthead) %> <br>
<%= link_to "Edit image", edit_restaurant_path(@restaurant)%> <br>

<strong>User's name:</strong><%= @restaurant.user.name%><br>
<strong>Name: </strong> <%= @restaurant.name %><br>
<strong>Description: </strong> <%= @restaurant.description %><br>
<strong>Full Adress: </strong> <%= @restaurant.full_address %><br>
<strong>Phone number: </strong> <%= @restaurant.phone_number %><br>
<strong>Category: </strong>
		<% @restaurant.categories.each do |category| %>
			<li><%= category.name %></li>
		<% end %>
		
<br>
<%= image_tag "http://maps.googleapis.com/maps/api/staticmap?center=#{@restaurant.full_address}&markers=color:red|#{@restaurant.full_address}&zoom=14&size=200x200&sensor=false&key=AIzaSyDfXK7ij2akV_gTsZfSietmxzxsa5qBtCo" %> <br>
<h3><%= link_to "Make a reservation", new_restaurant_reservation_path(@restaurant) %></h3>
<%= link_to "Back", restaurants_path %>	
<%= link_to "Download Menu"%><br/>

<% if current_user.starred_restaurants.include?(@restaurant)  %>  
    <h5>You have starred this restaurant. Do you want to unstar it?</h5><br>
    <%= button_to "Unstar Me", star_path(current_user.stars.where(restaurant_id: @restaurant.id).first), method: :delete, data: {confirm: "Are you sure?"} %>
<% else %>
    <h5>You have not starred this restaurant. Do you want to star it? </h5> <br>
    <%= button_to "Star Me", restaurant_stars_path(@restaurant.id), method: :post %>
    <% end %>


<%= link_to 'Edit', edit_restaurant_path(@restaurant) %>
<%= link_to 'Destroy', restaurant_path(@restaurant), method: :delete, data: {confirm: "Are you sure?"} %>






