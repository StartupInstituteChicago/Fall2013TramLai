<h1>Editing restaurant:</h1>
<%= form_for @restaurant do |f| %>

<p>	
	<%= f.label :name %>
	<%= f.text_field :name %>
</p>

<p>
	<%= f.label :description %>
	<%= f.text_area :description %>
</p>
<p>
	<%= f.label :full_address %>
	<%= f.text_field :full_address %>
</p>
<p>
	<%= f.label :phone_number %>
	<%= f.text_field :phone_number %>
</p>

<p>
	<%= f.submit%>
</p>

<% end %>

<%= link_to "Back", restaurants_path %>

