<%= form_for @reservation, url: restaurant_reservations_path do |f| %>
		
<p>	
	<%= f.label :email %>
	<%= f.text_field :email %>
</p>

<p>
	<%= f.label :requested_date_time %>
	<%= f.datetime_field :requested_date_time %>
</p>

<p>
	<%= f.label :message %>
	<%= f.text_area :message %>
</p>

<p>
	<%= f.submit "Save reservation" %>
</p>

<% end %>



