<div class="border-form-div">
  <%= form_for @reservation, url: restaurant_reservations_path do |f| %>
  
  <div>	<%= f.email_field :email, :autofocus => true, placeholder: "Your email address" %></div>
    
  <div><%= f.text_field :requested_date_time, placeholder: "Your preferred date and time" %></div>

  <div><%= f.text_area :message, placeholder: "Let us know what you want so we can assist you better" %></div>

  <div><%= f.submit "Save reservation", class: "btn btn-primary"%></div>
  
  <% end %>  
</div>



